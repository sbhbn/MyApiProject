<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .gradient-text {
        background: linear-gradient(to right, #f1c40f, #f39c12); /* 黃澄漸層 */
        -webkit-background-clip: text; /* 只顯示文字部分的背景 */
        -webkit-text-fill-color: transparent; /* 使文字填充顏色透明 */
    }
    body {
        /* 設定紫色漸層背景 */
        background: linear-gradient(to bottom, #6a0dad, #9b59b6);
        color: white; /* 設定文字顏色為白色以提高可讀性 */
    }
    .card {
        transition: transform 0.2s; /* 添加平滑過渡效果 */
    }

        .card:hover {
            transform: scale(1.05); /* 當滑鼠懸停時放大 */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* 添加陰影效果 */
